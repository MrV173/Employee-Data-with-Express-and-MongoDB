<div class="mt-3">
<div class="row">
    <div class="col">
        <a href="/employe/add" class="btn btn-primary mb-2 mt-3 text-center">Add Employe Data</a>

        <% if (msg.length !== 0) { %>
          <div class="alert alert-success" role="alert">
            <%= msg %>
          </div>
        <% } %>

        <table class="table mt-5">
            <thead>
              <tr class="fw-italic">
                <th scope="col">No</th>
                <th scope="col">Employee ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Jenis Kelamin</th>
                <th scope="col">Tanggal Lahir</th>
                <th scope="col">Posisi</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (datas.length === 0) { %>
               <tr>
                <td colspan="4">
                  <div class="alert alert-danger fw-bold" role="alert">
                    Data is Empty
                  </div>
                </td>
               </tr>
              <% } %>      
              <% datas.forEach((data,i) => {i++ %>
                <tr>
                  <th scope="row"><%= i++ %></th>
                  <td class="text-center"><%= data.employeeId %></td>
                  <td><%= data.nama %></td>
                  <td><%= data.email %></td>
                  <td><%= data.jenis_kelamin %></td>
                  <td><%= data.alamat %></td>
                  <td><%= data.posisi %></td>
                  <td>
                    <a href="/employe/<%= data.nama %>" class="btn btn-success badge rounded-pills"><i class="bi bi-info-circle-fill"></i> Detail</a>
                  </td>
                </tr>
              <% }) %>        
            </tbody>
          </table>
    </div>
</div>
</div>

